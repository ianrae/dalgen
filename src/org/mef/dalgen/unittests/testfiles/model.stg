header(package) ::= <<
package <package>;

import org.mef.framework.entities.Entity;
import play.data.*;

>>

fielddecl(type, name, bigName, setName) ::= <<

    <type> <name>;
    
    public <type> get<bigName>() {
        return this.entity.<name>;
    }
    public void <setName><bigName>(<type> val) {
        this.entity.<name> = val;
    }
>>


classdecl(type, name) ::= <<
@Entity
public class <name> extends Model
{
	@Transient
    private <type> entity;
    public void initEntity(<type> entity)
    {
        this.entity = entity;
    }
	
	public static Finder\<Long,<type>\> find = new Finder(
			Long.class, <type>.class
			);  
	
    
    //getters and setters
        
>>

endclassdecl() ::= <<
}
>>

sampleloop(items) ::= "<items:{it|<it.id>: <it.lastName>, <it.firstName>\n}>"