header(package) ::= <<
package <package>;

//import org.mef.framework.entities.Entity;
import play.data.*;
import java.util.*;
import play.db.ebean.*;
import play.data.validation.Constraints.*;
import javax.persistence.*;
import mef.entities.*;


>>

fielddecl(type, name, bigName, setName) ::= <<

    <type> <name>;
    
    public <type> get<bigName>() {
        return this.<name>;
    }
    public void <setName><bigName>(<type> val) {
		this.<name> = val;
        this.entity.<name> = val;
    }
>>


classdecl(type, name) ::= <<
@Entity
public class <name> extends Model
{
	@Transient
    public <type> entity = new <type>();
	
	
	public static Finder\<Long,<name>\> find = new Finder(
			Long.class, <name>.class
			);  
	
    
    //getters and setters
        
>>

endclassdecl() ::= <<
}
>>

sampleloop(items) ::= "<items:{it|<it.id>: <it.lastName>, <it.firstName>\n}>"